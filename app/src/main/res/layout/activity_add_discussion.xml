<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#eee"
    tools:context="com.example.myapplication.AddDiscussionActivity">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POST A NEW DISCUSSION"
        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp" />

    <EditText
        android:id="@+id/dis_title"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/heading"
        android:layout_alignStart="@+id/heading"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp"
        android:background="#fff"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textSize="14dp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.8dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/dis_title"
        android:layout_alignStart="@+id/dis_title"
        android:id="@+id/view2" />

    <EditText
        android:id="@+id/dis_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/post_discussion"
        android:layout_below="@+id/view2"
        android:layout_alignStart="@+id/view2"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="172dp"
        android:background="#fff"
        android:ems="10"
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:textSize="14dp" />

