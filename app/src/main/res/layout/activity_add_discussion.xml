<!--        android:layout_alignStart="@+id/dis_image" />-->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dis_title"
        android:layout_alignBottom="@+id/dis_title"
        android:layout_marginEnd="9dp"
        android:layout_toStartOf="@+id/dis_title"
        android:text="Title" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content"
        android:layout_alignBaseline="@+id/dis_content"
        android:layout_alignBottom="@+id/dis_content"
        android:layout_alignEnd="@+id/textView" />

